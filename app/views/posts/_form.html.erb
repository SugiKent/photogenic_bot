    <%= form.label :image_url %>
    <%= form.text_area :image_url, id: :post_image_url %>
  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.check_box :published, id: :post_published %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
